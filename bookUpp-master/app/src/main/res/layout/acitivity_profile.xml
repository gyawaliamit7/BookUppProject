<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00A8E8"
    tools:context="com.example.amitgyawali.bookupp.updataProfile">

        <EditText
            android:id="@+id/firstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/emailAddress"
            android:layout_alignLeft="@+id/emailAddress"
            android:layout_alignStart="@+id/emailAddress"
            android:layout_marginBottom="28dp"
            android:background="#ffffff"
            android:ems="7"
            android:hint="       first name "
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/lastName"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/firstName"
            android:layout_alignBottom="@+id/firstName"
            android:layout_alignEnd="@+id/emailAddress"
            android:layout_alignRight="@+id/emailAddress"
            android:background="#ffff"
            android:ems="7"
            android:hint="    Last Name"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/emailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/address"
            android:layout_alignLeft="@+id/address"
            android:layout_alignStart="@+id/address"
            android:layout_marginBottom="51dp"
            android:background="#ffff"
            android:ems="15"
            android:hint="                        Email Address"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/phoneNumber"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passcode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="#ffff"
            android:ems="15"
            android:hint="               Enter Valid Phone Number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/passcode"
            android:layout_alignLeft="@+id/passcode"
            android:layout_alignStart="@+id/passcode"
            android:layout_marginBottom="33dp"
            android:background="#ffff"
            android:ems="15"
            android:hint="         Temporary/Permanent Address"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/phoneNumber"
            android:layout_alignStart="@+id/phoneNumber"
            android:layout_below="@+id/phoneNumber"
            android:layout_marginTop="35dp"
            android:background="#ffff"
            android:ems="5"
            android:hint="         City"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/stateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cityName"
            android:layout_alignBottom="@+id/cityName"
            android:layout_centerHorizontal="true"
            android:background="#ffff"
            android:ems="3"
            android:hint="State"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/zipCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stateName"
            android:layout_alignBottom="@+id/stateName"
            android:layout_alignEnd="@+id/address"
            android:layout_alignRight="@+id/address"
            android:background="#ffff"
            android:ems="5"
            android:hint="ZIP code"
            android:inputType="textPersonName"
            android:text="" />

        <Button
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/stateName"
            android:layout_alignRight="@+id/stateName"
            android:layout_below="@+id/cityName"
            android:layout_marginTop="40dp"
            android:text="update" />

        <EditText
            android:id="@+id/passcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/phoneNumber"
            android:layout_alignStart="@+id/phoneNumber"
            android:layout_centerVertical="true"
            android:background="#ffff"
            android:ems="15"
            android:hint="                  Enter Password"
            android:inputType="textPersonName"
            android:text="" />


</RelativeLayout>
